[
  {
    "name": "csv",
    "importable": true,
    "dialogOptions": {
      "name": "CSV File",
      "extensions": ["csv"]
    },
    "labeling": "headline",
    "labels": [
      "Title",
      "Author",
      "Content",
      "Language",
      "Tags",
      "created with version"
    ],
    "order": [
      "title",
      "author",
      "content",
      "lang",
      "tags",
      "version"
    ],
    "convert": [
      {
        "type": "replace",
        "name": "content",
        "search": "\n",
        "replace": "[LF]"
      },
      {
        "type": "replace",
        "name": "content",
        "search": "\r",
        "replace": "[CR]"
      },
      {
        "type": "replace",
        "name": "content",
        "search": ";",
        "replace": "[SC]"
      },
      {
        "type": "json",
        "name": "tags"
      }
    ],
    "divider": {
      "field": ";",
      "line": "\n"
    }
  },
  {
    "name": "md",
    "importable": false,
    "dialogOptions": {
      "name": "Markdown",
      "extensions": ["md"]
    },
    "labeling": "inline",
    "labels": [
      {"prefix":"## ","suffix":""},
      {"prefix":"**by ","suffix":"**"},
      {"prefix":"```\n","suffix":"```"},
      {"prefix":"*written in* ","suffix":""},
      {"prefix":"Tags:","suffix":""}
    ],
    "order": [
      "title",
      "author",
      "content",
      "lang",
      "tags"
    ],
    "divider": {
      "field": "\n",
      "line": "\n\n---\n\n"
    }
  }
]
